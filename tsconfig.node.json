{
  "extends": "./tsconfig.json",
  "include": [
    "tailwind.config.ts",
    "vite.config.ts",
    "db/**/*",
    "load-context.ts",
    "worker-configuration.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "strict": true,
    "types": ["node", "bun"],
    "lib": ["ES2022"],
    "target": "ES2022",
    "module": "ES2022",
    "moduleResolution": "bundler",
    "verbatimModuleSyntax": true
  }
}
